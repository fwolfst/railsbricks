<% title(t('titles.admin')) %>
<h1>Admin <small>Home</small></h1>
<div class="row">
  <div class="col-sm-4">
    <h3>Menu</h3>
    <h4><%= link_to t('admin.users'), admin_users_path %> <small>- <%= "#{pluralize(@count, 'user')}" %></small></h4>
    BRICK_POSTS_LINK
    <hr/>
  </div>

  <div class="col-sm-4">
    <h3><%= t('admin.last_signups') %></h3>
    <ul class="list-unstyled">
      <% @last_signups.each do |user| %>
      <li class="list-padded-bottom">
        <%= link_to user.username, edit_admin_user_path(user) %><br/>
        <small><%= time_ago_in_words(user.created_at)%> ago</small>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-4">
    <h3><%= t('admin.last_signins') %></h3>
    <ul class="list-unstyled">
      <% @last_signins.each do |user| %>
      <li class="list-padded-bottom">
        <%= link_to user.username, edit_admin_user_path(user) %><br/>
        <small>
          <% unless user.last_sign_in_at.nil? %>
          <%= time_ago_in_words(user.last_sign_in_at)%> ago
          <% else %>
          <%= t('admin.never') %>
          <% end %>
        </small>
      </li>
      <% end %>
    </ul>
  </div>

</div>
